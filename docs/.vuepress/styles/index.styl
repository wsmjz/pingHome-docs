
body {
  font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
}

.demo {
  padding: 0;
  border: 1px solid #eaecef;
  border-radius: 3px;
  background: #fafafa;
  margin: 1rem 0 3rem
}

.demo__preview {
  padding: 20px;
  background: #fff;
  border-bottom: 1px solid #eaecef;
  border-radius: 3px 3px 0 0;
  position: relative
}

.demo__preview.full-screen {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  padding: 0;
  border-bottom: 0
}

.demo__preview:hover .demo__actions {
  background: rgba(0,0,0,.2);
  display: inline-block;
  color: #fff
}

.demo__actions {
  position: absolute;
  right: .5rem;
  top: .5rem;
  font-size: 20px;
  padding: 2px;
  border-radius: 4px;
  cursor: pointer;
  display: none;
  z-index: 9999
}

.demo__actions:hover {
  background: rgba(0,0,0,.5)!important;
  color: #fff
}

.demo__desc {
  margin: 10px;
  border: 1px solid #eaecef;
  padding: 1rem;
  background: #fff;
  font-size: 14px
}

.demo__desc p {
  margin: 0
}

.demo__code div[class*=language-] {
  border-radius: 0;
  margin: 0 1px
}

.demo__code pre {
  margin: 0
}

.demo__handler {
  text-align: center;
  height: 40px;
  line-height: 40px;
  cursor: pointer;
  color: #999;
  font-size: 14px;
  background: #fcfcfc
}

.demo__handler:hover {
  color: #666;
  background: #fafafa
}

.demo-loader {
  height: 100%
}

.demo-loader__loading {
  padding: 2rem
}